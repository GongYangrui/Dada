.form-group {
  margin-bottom: 24rpx;
}

.label {
  font-weight: bold;
  margin-bottom: 12rpx;
}

.input, .picker, .textarea {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 12rpx 20rpx;
  background-color: #eee;
  border-radius: 24rpx;
  font-size: 28rpx;
}

.tag.selected {
  background-color: #007aff;
  color: white;
}

