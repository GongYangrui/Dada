/* pages/board/board.wxss */
/* 顶部导航 */
.nav-scroll {
  height: 80rpx;
  white-space: nowrap;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.nav-container {
  display: inline-flex;
  padding: 0 30rpx;
}

.nav-item {
  padding: 0 30rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #666;
}

.nav-item.active {
  color: #FF2442;
  font-weight: bold;
}

/* 帖子瀑布流 */
.post-container {
  column-count: 2;
  column-gap: 20rpx;
  padding: 20rpx;
}

.post-card {
  break-inside: avoid;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.post-cover {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.user-info {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.username {
  font-size: 26rpx;
  color: #333;
}

.content-box {
  padding: 0 20rpx 20rpx;
}

.title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.action-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
}

.action-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}