/* pages/board/board.wxss */
/* 帖子瀑布流 */
.form-group {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}


.post-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 24rpx;
  box-sizing: border-box;
}


.post-card {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 48%;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
  box-sizing: border-box;
  min-height: 600rpx; /* 根据你内容调节 */
}


.post-cover {
  width: 100%;
  max-width: 100%;
  height: 400rpx;
  border-radius: 16rpx 16rpx 0 0;
  display: block;
  box-sizing: border-box;
}


.user-info {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.username {
  font-size: 26rpx;
  color: #333;
}

.content-box {
  flex: 1;
  min-height: 160rpx;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
}


.title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.action-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
  margin-top: auto;
}

.action-icon {
  margin-right: 10rpx;
  vertical-align: middle;
}

.action-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.input, .textarea {
  width: 100%;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  display: block;
}

.like-icon {
  font-size: 26rpx;
  color: #999;
  transition: color 0.3s ease;
  margin-right: 10rpx;
}

.liked {
  color: #e64340;
}

/* ❤️ 点赞动画效果 */
.liked-anim {
  animation: likeScale 0.3s ease;
}

@keyframes likeScale {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.4);
  }
  100% {
    transform: scale(1);
  }
}







