/* 约球卡片 */
/* pages/home/home.wxss */
.card {
  position: relative; /* 新增 */
  border: 1px solid #ccc;
  border-radius: 20rpx;
  padding: 20rpx;
  padding-bottom: 120rpx; /* ✅ 给按钮留空间 */
  margin: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
}

.card-footer {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.note {
  font-size: 24rpx;
  color: #999;
}

.btn-join {
  position: absolute;       /* 新增 */
  bottom: 20rpx;            /* 离底部距离 */
  right: 20rpx;             /* 离右侧距离 */
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  background-color: #4CAF50;
  color: white;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 让按钮更立体 */
}

.info-line {
  display: flex;
  align-items: center;
  margin: 8rpx 0;
}

.info-line van-icon {
  margin-right: 12rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}

.tag-row {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  margin-top: 8rpx;
}

.note-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
  line-height: 48rpx;
  white-space: nowrap;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  flex: 1;
}

.tag {
  background-color: #f0f0f0;
  color: #333;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
}


/* 帖子 */
/* pages/board/board.wxss */
/* 帖子瀑布流 */
.form-group {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}


.post-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 24rpx;
  box-sizing: border-box;
}


.post-card {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 48%;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
  box-sizing: border-box;
  min-height: 600rpx; /* 根据你内容调节 */
}


.post-cover {
  width: 100%;
  max-width: 100%;
  height: 400rpx;
  border-radius: 16rpx 16rpx 0 0;
  display: block;
  box-sizing: border-box;
}


.user-info {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.username {
  font-size: 26rpx;
  color: #333;
}

.content-box {
  flex: 1;
  min-height: 160rpx;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
}


.title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.action-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
  margin-top: auto;
}

.action-icon {
  margin-right: 10rpx;
  vertical-align: middle;
}

.action-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.input, .textarea {
  width: 100%;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  display: block;
}

.like-icon {
  font-size: 26rpx;
  color: #999;
  transition: color 0.3s ease;
  margin-right: 10rpx;
}

.liked {
  color: #e64340;
}

/* ❤️ 点赞动画效果 */
.liked-anim {
  animation: likeScale 0.3s ease;
}

@keyframes likeScale {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.4);
  }
  100% {
    transform: scale(1);
  }
}

/* 交易信息 */
.transaction-container {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  display: flex;
  flex-direction: row;
  height: 200rpx;
  box-sizing: border-box;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #f8f8f8;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
}

.product-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  max-height: 60rpx; /* 限制高度避免占太多 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.3;
  flex-grow: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 600;
  margin-top: 8rpx;
}
