.profile-header {
  position: relative;
  height: 380rpx; /* 增加背景整体高度 */
  text-align: center;
  color: white;
  overflow: hidden;
}

.header-bg {
  background: linear-gradient(135deg, #60a6f5, #5ed4f0);
  position: absolute;
  width: 100%;
  height: 380rpx; /* 同步背景高度 */
  top: 0;
  left: 0;
  z-index: -1;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.profile-info {
  padding-top: 120rpx; /* 原来是 100rpx，适配新高度 */
  display: flex;
  flex-direction: column;
  align-items: center;
}


.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  object-fit: cover;
}

.avatar-edit {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 4rpx 10rpx;
  border-radius: 16rpx;
  line-height: 1;
}

.nickname {
  font-size: 34rpx;
  font-weight: 600;
  margin-top: 24rpx;
}


/* 我的内容中心对应的样式代码 */
.my-section-title {
  font-size: 35rpx;
  font-weight: bold;
  padding: 32rpx 30rpx 16rpx;
  color: #333;
  text-align: center;
}

.entry-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 24rpx;
}

.entry-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 36rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.2s ease;
}

.entry-card:active {
  transform: scale(0.98);
}

.entry-icon-box {
  background: #f5f5f5;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 12rpx;
}

.entry-text {
  font-size: 26rpx;
  color: #333;
}


