<view class="profile-container">
  <!-- 头像 -->
  <van-cell center title="头像" is-link bindtap="changeAvatar">
    <view slot="right-icon">
      <image class="avatar" src="{{avatar}}" />
    </view>
  </van-cell>

  <!-- 名字 -->
  <van-cell title="名字" is-link value="{{name}}" bindtap="editName" />

  <!-- 性别 -->
  <van-cell title="性别" is-link value="{{gender}}" bindtap="selectGender" />

  <!-- 手机号 -->
  <van-cell title="手机号" value="{{phone}}" is-link bindtap="editPhoneNumber" />

  <!-- 签名 -->
  <van-cell title="签名" is-link value="{{signature}}" bindtap="editSignature" />

<!-- 地址 -->
<van-cell title="地址" is-link value="{{address}}" bindtap="editAddress" />

<!-- 地址选择弹出框 -->
<van-popup show="{{showAddressPopup}}" position="bottom" bind:close="closeAddressPopup">
  <view class="popup-content">
    <!-- 地址选择器 -->
    <van-tree-select
      show-toolbar
      value="{{selectedAddress}}"
      columns="{{addressColumns}}"
      bind:change="onAddressChange"
      bind:confirm="confirmAddress"
    />
    <van-button type="primary" bindtap="confirmAddress">确定</van-button>
  </view>
</van-popup>

</view>
