/* pages/home/home.wxss */
.card {
  position: relative; /* 新增 */
  border: 1px solid #ccc;
  border-radius: 20rpx;
  padding: 20rpx;
  margin: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
}

.card-footer {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.note {
  font-size: 24rpx;
  color: #999;
}

.btn-join {
  position: absolute;       /* 新增 */
  bottom: 20rpx;            /* 离底部距离 */
  right: 20rpx;             /* 离右侧距离 */
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  background-color: #4CAF50;
  color: white;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 让按钮更立体 */
}

.info-line {
  display: flex;
  align-items: center;
  margin: 8rpx 0;
}

.info-line van-icon {
  margin-right: 12rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}
